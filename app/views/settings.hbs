<div class="ui container">
{{> mainmenu _id="settings"}}

  <div id="side" class="ui grid">
    <aside class="eight wide column">
    <div class="ui fluid form segment">
        <form class = "ui form" action="/settings" method="POST">
          <h3 class="ui red header">You can change your settings on this page</h3>
          <div class="ui error message"></div>
          <div class="two fields">
            <div class="field">
              <label>First Name</label>
              <input value="{{user.firstName}}" type="text" name="firstName">
            </div>
            <div class="field">
              <label>Last Name</label>
              <input value="{{user.lastName}}" type="text" name="lastName">
            </div>
          </div>
          <div class="field">
            <label>Email</label>
            <input value="{{user.email}}" type="text" name="email">
          </div>
          <div class="field">
            <label>Password</label>
            <input value="" type="password" name="password">
          </div>
          <button class="ui blue submit button">Save</button>
        </form>
      </div>
</aside>

  <aside class="eight wide column">
    <div class="ui fluid form segment">
        <img class="ui small image" src="/getpicture" onerror="this.src='/images/blank.gif'">
      <h5>To upload an image click the image below</h5>
      <form action="/uploadpicture" method="post" enctype="multipart/form-data">
        <input type="file" name="picture" /><br>
        <button class="ui blue submit button">Upload</button>
      </form>
    </div>
    </aside>

  </div>
<script src="validation/signval.js"></script>

