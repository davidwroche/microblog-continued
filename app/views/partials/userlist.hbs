<section class="ui raised segment">
  <div class="ui grid">
    <aside class="eight wide column">
      <div class="ui stacked fluid form segment">
      <form action="/removeuser" method="POST">
        <h3 class="ui header">Users</h3>
        {{#each User}}
        <div class="field">
          <img class="ui avatar image" src="/getadminuser/{{{_id}}}" onerror="this.src='/images/blank.gif'"/>
          <div class ="ui checkbox">
                  <input  name="usr" type="checkbox" value="{{_id}}">
                  <label>Delete {{firstName}} {{lastName}} </label>
                </div>
          </div>
          {{/each}}
        <br>
          <button class="ui blue submit button">Delete User</button>
        </form>
        </div>
    </aside>

    <aside class="ui eight wide column">
      <div class="ui stacked fluid form segment">
        <form action="/userSignup" method="POST">
          <h3 class="ui header">Sign up new User</h3>
          <div class="ui error message"></div>
          <div class="two fields">
            <div class="field">
              <label>First Name</label>
              <input placeholder="First Name" type="text" name="firstName">
            </div>
            <div class="field">
              <label>Last Name</label>
              <input placeholder="Last Name" type="text" name="lastName">
            </div>
          </div>
          <div class="field">
            <label>Email</label>
            <input placeholder="Email" type="text" name="email">
          </div>
          <div class="field">
            <label>Password</label>
            <input type="password" name="password">
          </div>
          <button class="ui blue submit button">Submit</button>
        </form>
      </div>
    </aside>
  </div>
</section>
<script src="validation/signval.js"></script>
